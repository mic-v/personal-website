---
import Logo from "./Logo.astro";
import { Icon } from 'astro-icon';

/* Nav items */
const navLinks: { label: string, href: string, icon: string } [] = [
  { label: 'Home', href:'/' , icon:"ri:home-2-line" },
  { label: 'About', href:'/about', icon:"mdi:about-circle-outline" },
  { label: 'Projects', href:'/projects', icon:"system-uicons:projector" },
  { label: 'Blog', href:'/blog', icon:"carbon:blog" },
  { label: 'Contact', href:'/contact', icon:"system-uicons:contacts" },
];

const socialLinks: { label: string, href: string, icon: string } [] = [
  { label: 'LinkedIn', href:'https://www.linkedin.com/in/michael-victorino-3a4a27163/', icon: "line-md:linkedin" },
  { label: 'Email', href:'mailto:michaelvictorio@gmail.com', icon: "mdi:email-outline" },
];
---

<div class="m-auto w-4/5 md:container lg:w-3/5 border-t border-zinc-300"></div>
<footer class="">
  <div class="container xl:w-[1500px] h-[300px] m-auto px-4 py-12 md:py-0 md:px-4 lg:px-10">
    <div class="w-full h-full flex flex-col md:flex-row items-center jutisfy-start md:justify-center gap-8 md:gap-32">
      <div class="flex flex-row md:flex-col items-center justify-around gap-16 md:gap-4">
        <div class="basis-1/2">
          <Logo />
        </div>
        <span class="basis-1/2">&copy;Copyright Michael Victorino</span>
      </div>
      <div class="flex flex-row justify-around items-start space-x-16">
        <div class="h-5/6 flex flex-col gap-4">
          <span class="text-darkacc font-bold">Navigation</span>
          <ul class="basis-3/4 flex flex-col gap-2">
            {
              navLinks.map(({label, href, icon }) => (
              <li>
                <div class="flex flex-row gap-4">
                  <Icon name={icon} class="w-4" />
                  <a href={href} class="underline-offset-4 hover:underline">{label}</a>
                </div>
              </li>
              ))
            }
          </ul>
        </div>
        <div class="h-5/6  flex flex-col gap-4">
          <span class="text-darkacc font-bold">Links</span>
          <ul class="basis-3/4 flex flex-col gap-2">
            {
              socialLinks.map(( {label, href, icon }) => (
                <li>
                  <div class="flex flex-row gap-4">
                    <Icon name={icon} class="w-4" />
                    <a href={href} target="_blank" class="underline-offset-4 hover:underline">{label}</a>
                  </div>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
  </div>
  </div>
</footer>