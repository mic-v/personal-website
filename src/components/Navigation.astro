    </ul>
    <ul>
      <li><Icon name="mdi:weather-night" class="w-6 hidden md:block"/></li>
    </ul>
  </div>
</nav>

<script>

let menubutton = document.getElementById('mobile-menu');
menubutton.addEventListener("click", enableMenu);

function enableMenu() {
  let height = 'h-full';
  let navbar = document.getElementById('navbar');
  let menunav = document.getElementById('mobile-nav');
  menunav.classList.toggle('hidden');
  if(navbar.classList.contains('max-h-16')) {
    navbar.classList.add('max-h-full');
    navbar.classList.remove('max-h-16');
  } else {
    navbar.classList.remove('max-h-full');
    navbar.classList.add('max-h-16');
  }
