  <div class="container mx-auto flex flex-col md:flex-row justify-between items-center">
    <div class="w-full flex flex-row justify-between gap-4">
      <div class="font-[Sentient] text-4xl md:text-5xl"><strong>michael<span class="text-[#083d77]">v</span></strong></div>
      <div class="flex flex-row">
        <Icon name="mdi:weather-night" class="w-6 md:hidden"/>
        <Icon id="mobile-menu" name="mdi:menu" class="w-6 md:hidden cursor-pointer"/>
      </div>
    </div>
